#define VER_FILEVERSION             ${Viewer_VERSION_MAJOR},${Viewer_VERSION_MINOR},${Viewer_VERSION_PATCH},0
#define VER_FILEVERSION_STR         "${Viewer_VERSION_MAJOR}.${Viewer_VERSION_MINOR}.${Viewer_VERSION_PATCH}.0\0"

