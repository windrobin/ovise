#define VER_PRODUCTVERSION_STR      "${OVISE_VERSION_MAJOR}.${OVISE_VERSION_MINOR}.${OVISE_VERSION_PATCH}\0"

#define VER_PRIVATEBUILD            VS_FF_PRIVATEBUILD

#ifndef DEBUG
#define VER_DEBUG                   0
#else
#define VER_DEBUG                   VS_FF_DEBUG
#endif

VS_VERSION_INFO VERSIONINFO
FILEVERSION    	VER_FILEVERSION
